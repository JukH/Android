<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout4" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="0dp">

        <Button
                android:text="@string/nappi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:contentDescription="@string/nappi"
                tools:layout_editor_absoluteY="681dp" tools:layout_editor_absoluteX="105dp" android:onClick="krosas"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_width="0dp">
        <Button
                android:text="@string/nappi2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:contentDescription="@string/nappi2"
                tools:layout_editor_absoluteX="193dp" tools:layout_editor_absoluteY="681dp" android:onClick="lily"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/krosas"
                android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/kuva1"
                app:layout_constraintBottom_toTopOf="@+id/button"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>